---
import LayoutStacked from '../app/LayoutStacked.astro';
import AuthCard from '../components/AuthCard.astro';
---

<LayoutStacked>
	<main class="min-h-screen bg-gray-50 dark:bg-gray-900">
		<section class="mx-auto flex min-h-screen items-center justify-center px-6 py-16">
			<AuthCard
				title="Create your account"
				description="Tell us a bit about your organization to get started with the Canadian accessibility and market insight platform."
				id="register"
			>
				<form class="space-y-6" action="#" method="post">
					<div>
						<label
							for="company-name"
							class="mb-2 block text-sm font-medium text-gray-900 dark:text-white"
						>
							Company name
						</label>
						<input
							type="text"
							id="company-name"
							name="company-name"
							autocomplete="organization"
							placeholder="Organization Inc."
							required
							class="block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-sm text-gray-900 focus:border-primary-600 focus:ring-4 focus:ring-primary-200 dark:border-gray-600 dark:bg-gray-700 dark:text-white dark:placeholder-gray-400 dark:focus:border-primary-500 dark:focus:ring-primary-900"
						/>
					</div>
					<div>
						<label
							for="email"
							class="mb-2 block text-sm font-medium text-gray-900 dark:text-white"
						>
							Email address
						</label>
						<input
							type="email"
							id="email"
							name="email"
							autocomplete="email"
							placeholder="name@organization.ca"
							required
							class="block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-sm text-gray-900 focus:border-primary-600 focus:ring-4 focus:ring-primary-200 dark:border-gray-600 dark:bg-gray-700 dark:text-white dark:placeholder-gray-400 dark:focus:border-primary-500 dark:focus:ring-primary-900"
						/>
					</div>
					<div>
						<label
							for="password"
							class="mb-2 block text-sm font-medium text-gray-900 dark:text-white"
						>
							Password
						</label>
						<input
							type="password"
							id="password"
							name="password"
							autocomplete="new-password"
							placeholder="Create a secure password"
							required
							class="block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-sm text-gray-900 focus:border-primary-600 focus:ring-4 focus:ring-primary-200 dark:border-gray-600 dark:bg-gray-700 dark:text-white dark:placeholder-gray-400 dark:focus:border-primary-500 dark:focus:ring-primary-900"
						/>
					</div>
					<div>
						<label
							for="company-type"
							class="mb-2 block text-sm font-medium text-gray-900 dark:text-white"
						>
							Company setup
						</label>
						<select
							id="company-type"
							name="company-type"
							required
							class="block w-full rounded-lg border border-gray-300 bg-gray-50 p-2.5 text-sm text-gray-900 focus:border-primary-600 focus:ring-4 focus:ring-primary-200 dark:border-gray-600 dark:bg-gray-700 dark:text-white dark:placeholder-gray-400 dark:focus:border-primary-500 dark:focus:ring-primary-900"
						>
							<option value="" disabled selected>Select one</option>
							<option value="existing">Existing company</option>
							<option value="new">New company</option>
						</select>
					</div>
					<button
						type="submit"
						class="inline-flex w-full items-center justify-center rounded-lg bg-primary-700 px-6 py-3 text-base font-semibold text-white shadow-sm transition hover:bg-primary-800 focus-visible:outline-none focus-visible:ring-4 focus-visible:ring-primary-300 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus-visible:ring-primary-800"
					>
						Create Account
					</button>
					<p class="text-sm text-gray-600 dark:text-gray-300">
						Already have an account?
						<a
							href="/signin"
							class="font-semibold text-primary-700 hover:underline dark:text-primary-300"
						>
							Sign in
						</a>
					</p>
				</form>
			</AuthCard>
		</section>
	</main>
</LayoutStacked>
